                android:layout_marginLeft="7dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="4dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                tools:ignore="DuplicateIds">
